<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>BlackJack</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>
  <filter>
    <filter-name>UserFilter</filter-name>
    <filter-class>Filters.UserFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>UserFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>UserConnectFilter</filter-name>
    <filter-class>Filters.UserConnectFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>UserConnectFilter</filter-name>
    <url-pattern>/connection</url-pattern>
  </filter-mapping>
  <servlet>
    <servlet-name>Connection</servlet-name>
    <servlet-class>Servlets.Connection</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Connection</servlet-name>
    <url-pattern>/connection</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Registration</servlet-name>
    <servlet-class>Servlets.Registration</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Registration</servlet-name>
    <url-pattern>/registration</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Deconnection</servlet-name>
    <servlet-class>Servlets.Deconnection</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Deconnection</servlet-name>
    <url-pattern>/deconnection</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Menu</servlet-name>
    <servlet-class>Servlets.Menu</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Menu</servlet-name>
    <url-pattern>/menu</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Play</servlet-name>
    <servlet-class>Servlets.Play</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Play</servlet-name>
    <url-pattern>/play</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Bet</servlet-name>
    <servlet-class>Servlets.Bet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Bet</servlet-name>
    <url-pattern>/bet</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Pick</servlet-name>
    <servlet-class>Servlets.Pick</servlet-class>
  </servlet>
