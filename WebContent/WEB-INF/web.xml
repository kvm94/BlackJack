    <servlet-name>StopTurn</servlet-name>
    <servlet-class>Servlets.StopTurn</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>StopTurn</servlet-name>
    <url-pattern>/stopTurn</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Buy</servlet-name>
    <servlet-class>Servlets.Buy</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Buy</servlet-name>
    <url-pattern>/buy</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Sell</servlet-name>
    <servlet-class>Servlets.Sell</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Sell</servlet-name>
    <url-pattern>/sell</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Transaction</servlet-name>
    <servlet-class>Servlets.Transaction</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Transaction</servlet-name>
    <url-pattern>/transaction</url-pattern>
  </servlet-mapping>
</web-app>